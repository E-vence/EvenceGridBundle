{% extends 'EvenceGridBundle:Grid:grid_base.html.twig' %}


{% block filter %}
    {% if filter.hasFields() %}
        <div class="col-lg-4">
            {{ parent() }}
        </div>
    {% endif %}
{% endblock %}

{% block table %}
 {% set tableAttributes = tableAttributes|merge({'class': 'table table-bordered table-hover table-striped '}) %} 
  {%  if gridOptions.mode == 'view' %}
     <div class="col-lg-{% if filter.hasFields() %}8{% else %}12{% endif %}">
        {{ parent() }}
    </div>
  {% else %}
    {{ parent() }}
  {% endif %}
{% endblock table %}

{%  block actions %}
  <div class="btn-group btn-group-xs" role="group">{{ parent() }}</div>
{% endblock %}
 
{% block action %}
    {% set currentClass = "" %}
    
    {%  if attr.class is defined %}
        {% set currentClass = attr.class %}
    {% endif %}
    
    {% set attr = attr|merge({'class': 'btn btn-default ' ~ currentClass}) %}   
    {{ parent() }}
{% endblock %}

{% block sortUp %}
    <span class="caret"></span>
{%endblock%}

{% block sortDown %}
<span class="dropup">
    <span class="caret"></span>
</span>
{% endblock %}