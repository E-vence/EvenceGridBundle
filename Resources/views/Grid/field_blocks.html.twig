{%  block boolean_type %}
    {%  if value %} 
        <span class="label label-success">{{ options.label_yes|trans }}</span>
    {% else %}
        <span class="label label-default">{{ options.label_no|trans }}</span>
    {% endif %}
{%  endblock %}

{%  block text_type %}
    {{ value }}
{% endblock %}

{%  block html_type %}
    {{ value|raw }}
{% endblock %}

{%  block datetime_type %}
    {{ block('text_type') }}
{% endblock %}

{%  block date_type %}
    {{ block('text_type') }}
{% endblock %}

{%  block time_type %}
    {{ block('text_type') }}
{% endblock %}

{%  block age_type %}
    {{ block('text_type') }}
{% endblock %}

{%  block link_type %}
    {% spaceless %}
        <a href="{{ value }}" target="{{ options.target }}">
            {% if not options.label %}
                {{ value }}
            {% else %}
                {{ options.label }}
            {% endif %}
        </a>
    {% endspaceless %}
{% endblock %}


{%  block money_type %}
   <div style="text-align: right;"> {{ block('text_type') }}</div>
{% endblock %}

{%  block choice_type %}
    {%  for key,val in value %}{%  if key == 0 %}{{ val|trans }}{% else %}{{ options.separator }}{{ val|trans }}{% endif %}{% endfor %}
{% endblock %}